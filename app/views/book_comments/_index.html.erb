<% book.book_comments.each do |book_comment| %>
  <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
  <%= link_to "destroy", book_book_comment_path(book_id: book_comment.book, id: book_comment), method: :delete, remote: true %><br>
  <% else %>
  <br>
  <% end %>
<% end %>