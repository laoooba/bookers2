
<div class="container px-5 px-sm-0">
  <div class="row">



   <%= render 'books/list', user: @user, book: @book_new %>


    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table">
          <tbody>
            <tr>
              <td><%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %><br>
                <%= @user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title,book_path(@book.id) %></td>
              <td><%= @book.body %></td>
             <!--いいね-->
              <td>
                <div class="favorite-btn_<%= @book.id %>">
                  <%= render 'favorites/favorite-btn', book: @book %>
                </div>
              </td>
              <!--いいね-->
              <td><p><%=  "#{@book.book_comments.count} コメント" %></p></td>
              <% if @user == current_user %>
              <td> <%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-success" %></td>
              <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, class:"btn btn-danger" %>
              </td>
              <% end %>

            </tr>
          </tbody>
          <tbody>
            <tr>
              <td>
                <div class="comments">
                 <%= render 'book_comments/index', book: @book %>
                 </div>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="new-comment">
          <%= render 'book_comments/form', book: @book, book_comment: @book %>
        </div>


    </div>
  </div>
</div>


