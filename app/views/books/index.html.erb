  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.text %></th>
          </tr>
        </tbody>
      </table>

    </div>
  </div>
</div>