<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, placeholder:"名前", class:"form-control" %>
      </div>

      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.attachment_field :profile_image, class:"form-control-file" %>
      </div>

      <div class="form-group">
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_area :introduction, placeholder:"サイコー", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update user", class:"btn btn-secondary" %>
      </div>
        <% end %>

    </div>
  </div>
</div>









